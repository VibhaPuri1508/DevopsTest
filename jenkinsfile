pipeline{
   agent any
   tools {
        maven "MAVEN"
        jdk "JDK"
    }
    triggers{
     cron(' 0 06 * * * ')
    } 
    stages{
     stage("code build"){
         steps{
          bat "echo starting the program"
       }
     }
    stage("code clean"){
         steps{
          bat "echo code clean"
       }
     }
    stage("code test"){
         steps{
          bat "mvn clean install  sonar:sonar -Dsonar.token=sqa_2b9abeaf77f78ed9826e2e0590d8ffda21bab02f"
       }
     }
  }
  post{
     success {
      bat "echo success"
     }
  }

}
