pipeline{
   agent any
     environment{
     notifyEmail ="vibhapuri45@gmail.com"
    }
    tools{
     maven 'MAVEN_HOME'
    }
    triggers{
     cron(' 0 06 * * * ')
    } 
    stages{
     stage("code build"){
         steps{
          bat "echo starting the program"
       }
     }
    stage("code clean"){
         steps{
          bat "mvn install"
       }
     }
    stage("code test"){
         steps{
          bat "mvn clean test"
       }
     }
  }
  post{
     success {
      bat "echo success"
     }
  }

}
